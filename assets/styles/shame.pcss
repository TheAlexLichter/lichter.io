
/* Height fix for anchors */
html {
  scroll-padding-top: theme('spacing.8');
}

/*
 * Adapted from animate.css (https://github.com/daneden/animate.css/)
 */

.animated {
  animation-duration: 1s;
  animation-fill-mode: both;
  &.infinite {
    animation-iteration-count: infinite;
  }
}

@keyframes fade-in {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.fade-in {
  animation-name: fade-in;
}
